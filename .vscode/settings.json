{
  /* ********************** 폴더 컬러 설정 ********************** */
  "folder-color.pathColors": [
    {
      "folderPath": "resume-nextjs\\src\\app\\",
      "color": "foldercolorizer.color_00ccff"
    },
    {
      "folderPath": "resume-nextjs\\src\\app\\_components\\",
      "color": "foldercolorizer.color_ffcc00"
    },
    {
      "folderPath": "resume-nextjs\\src\\app\\_components\\common\\",
      "color": "foldercolorizer.color_cc6633"
    },
    {
      "folderPath": "resume-nextjs\\src\\app\\_hooks\\",
      "color": "foldercolorizer.color_cc66ff"
    },
    {
      "folderPath": "resume-nextjs\\src\\app\\_components\\common\\new-experiences\\",
      "color": "foldercolorizer.color_00ccff"
    },
    {
      "folderPath": "resume-nextjs\\src\\app\\_components\\common\\overlays\\Toasts.jsx\\"
    },
    {
      "folderPath": "resume-nextjs\\src\\app\\_components\\common\\overlays\\",
      "color": "foldercolorizer.color_66ffff"
    }
  ],

  /* ********************** JavaScript 자동 임포트 설정 ********************** */
  // ✅ JavaScript 설정 영역
  // 자동 import 제안 활성화
  "javascript.suggest.autoImports": true,
  // 파일 이동 시 import 경로 자동 업데이트
  "javascript.updateImportsOnFileMove.enabled": "always",
  // import 시 상대 경로 대신 절대 경로(@ 경로 등) 사용
  "javascript.preferences.importModuleSpecifier": "non-relative",
  // 옵셔널 체이닝 자동완성 활성화 (?. 제안)
  "javascript.suggest.includeAutomaticOptionalChainCompletions": true,

  // ✅ TypeScript 설정 영역
  // 자동 import 제안 활성화
  "typescript.suggest.autoImports": true,
  // 파일 이동 시 import 경로 자동 업데이트
  "typescript.updateImportsOnFileMove.enabled": "always",
  // import 시 상대 경로 대신 절대 경로(@ 경로 등) 사용
  "typescript.preferences.importModuleSpecifier": "non-relative",

  /* ********************** 파일 연결 설정 ********************** */
  "files.associations": {
    // .css 파일을 tailwindcss 언어 모드로 인식
    "*.css": "tailwindcss",
    // .jsx 파일을 javascriptreact로 인식
    "*.jsx": "javascriptreact"
  },

  /* ********************** 에디터 기본 포매터 설정 ********************** */
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit"
  },

  /* ********************** JSONC 파일 포매터 설정 ********************** */
  // jsonc 파일의 포맷터도 Biome으로 지정
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  }
}
