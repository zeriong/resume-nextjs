{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "allowJs": true,
    "checkJs": true
  },
  "include": ["src/**/*", "image.d.ts", "svg.d.ts"],
  "exclude": ["node_modules", ".next", "out", "build"]
}
